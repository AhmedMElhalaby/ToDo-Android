<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_selected="false">
        <shape>
            <gradient android:angle="180" android:endColor="@color/colorPrimaryDark" android:gradientRadius="270dp" android:startColor="@color/colorPrimary" />
            <corners android:radius="8dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
        </shape>

    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/greyLight" />
            <corners android:radius="8dp" />
            <stroke android:color="@color/greyDark" android:width="3dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
        </shape>

    </item>



    <item android:state_pressed="true">
        <shape>
            <gradient android:color="@color/colorPrimary" android:endColor="@color/colorPrimaryDark" android:gradientRadius="90" android:startColor="@color/colorPrimary" />
            <corners android:radius="8dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />

        </shape>

    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/colorPrimaryDark" android:gradientRadius="90dp" android:startColor="@color/colorPrimary" />
            <corners android:radius="8dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
        </shape>

    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="180" android:endColor="@color/colorPrimaryDark" android:gradientRadius="270dp" android:startColor="@color/colorPrimary" />
            <corners android:radius="8dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
        </shape>

    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/greyLight" />
            <corners android:radius="8dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
        </shape>

    </item>


    <item>
        <shape>
            <gradient android:angle="180" android:endColor="@color/colorPrimaryDark" android:gradientRadius="270dp" android:startColor="@color/colorPrimary" />
            <corners android:radius="8dp" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
        </shape>

    </item>

</selector>
